<Window x:Class="CRIMP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:local="clr-namespace:CRIMP"
        mc:Ignorable="d"
        Title="CRIMP" Width="1400" Height="800" 
        Icon="crimp.ico"
        WindowStartupLocation="CenterScreen"
        Loaded="winMain1_Loaded" Unloaded="winMain1_Unloaded">
    <Window.Resources>
        <local:StringToFontFamilyConverter x:Key="StringToFontFamilyConverter"/>
    </Window.Resources>
    <DockPanel>
        <DockPanel.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#f5faff" Offset="0"/>
                <GradientStop Color="#e6f0fa" Offset="1"/>
            </LinearGradientBrush>
        </DockPanel.Background>
        <!-- Header across top -->
        <Grid DockPanel.Dock="Top" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="36"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="700"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="C R I M P" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource HeaderStyle}"  
                   HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:Name="btnHelp" Content="?" Grid.Column="1" Grid.Row="0" Click="btnHelp_Click"
                    Style="{StaticResource ButtonTextStyle}" VerticalAlignment="Top" HorizontalAlignment="Right" 
                    Margin="5,5,5,0" Width="30" Height="30" FontWeight="ExtraBold" FontSize="16"/>
            <Label Content="Convert and Resize IMages Processor" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" 
                   Style="{StaticResource HeaderStyle}" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Content="©2025 Pat Dooley" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" 
                   Style="{StaticResource HeaderStyle}" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <Label Content="Version 1.0.0" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" 
                   Style="{StaticResource HeaderStyle}" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Grid>
        <!-- Tabs on left -->
        <TabControl DockPanel.Dock="Left" Width="720" MaxHeight="720" Margin="5" VerticalAlignment="Top" Style="{StaticResource Gradient}">
            <TabControl.Resources>
                <Style TargetType="{x:Type TabItem}">
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="False">
                            <Setter Property="Background" Value="#C6E6F5"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TabControl.Resources>
            <TabItem Header="Process Folders" Background="#C6E6F5">
                <!-- Your existing Process Folders content -->
                <Grid Style="{StaticResource Gradient}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="420"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="Resize Options" Grid.Row="2" Margin="10,0,5,10" Width="Auto" >
                        <StackPanel Orientation="Vertical" Margin="5">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Label Content="Amount:" Height="24" Width="100" VerticalAlignment="Top"/>
                                <TextBox Width="60" Name="txtResizeAmount" Height = "24" VerticalAlignment="Top" PreviewTextInput="txtResizeAmount_PreviewTextInput" LostFocus="txtResizeAmount_LostFocus" VerticalContentAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <RadioButton x:Name="rbNone" GroupName="resize" Margin="0,2,0,2" Click="rbNone_Click" IsChecked="True">None</RadioButton>
                                <RadioButton x:Name="rbPercentage" GroupName="resize" Margin="8,2,0,2" Click="rbPercentage_Click">Percentage</RadioButton>
                                <RadioButton x:Name="rbWidth" GroupName="resize" Margin="8,2,0,2" Click="rbWidth_Click">Width</RadioButton>
                                <RadioButton x:Name="rbHeight" GroupName="resize" Margin="8,2,0,2" Click="rbHeight_Click">Height</RadioButton>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Input File" Grid.Row="3" Margin="10,0,5,10"  Width="Auto">
                        <StackPanel Orientation="Vertical" Margin="5">
                            <StackPanel Orientation="Horizontal" Margin="5,5,0,0">
                                <Label Content="Select File Type:" Height = "24" Width="105" VerticalAlignment="Top"/>
                                <ComboBox x:Name="cboInputFileType" HorizontalAlignment="Left" Height="24" Width="60" VerticalAlignment="Top" SelectionChanged="cboInputFileType_SelectionChanged"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <RadioButton x:Name="rbKeep" GroupName="sourcefile" Margin="0,2,0,2" Click="rbKeep_Click" IsChecked="False">Keep</RadioButton>
                                <RadioButton x:Name="rbDelete" GroupName="sourcefile" Margin="8,2,0,2" Click="rbDelete_Click" IsChecked="True">Delete after copy</RadioButton>
                                <RadioButton x:Name="rbDeleteOnly" GroupName="sourcefile" Margin="8,2,0,2" Click="rbDeleteOnly_Click" IsChecked="False">Delete only</RadioButton>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Image Text" Grid.Row="4" Margin="10,0,5,10"  Width="Auto">
                        <StackPanel Orientation="Vertical" Margin="5">
                            <StackPanel Orientation="Horizontal" Margin="5,5,0,0">
                                <Label Content="Copyright:" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70"/>
                                <TextBox MinWidth="200" Name="txtCopyRight" Height="24" HorizontalAlignment="Left" VerticalContentAlignment="Center" Text="©" LostFocus="txtCopyRight_LostFocus" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="5,5,0,0">
                                <StackPanel.Resources>
                                    <local:FontNameToFontFamilyConverter x:Key="FontNameToFontFamilyConverter"/>
                                </StackPanel.Resources>
                                <Label Content="Font name:" HorizontalAlignment="Left"  Width="70"/>

                                <ComboBox x:Name="FontComboBox" MinWidth="188" MinHeight="40" HorizontalAlignment="Left" Margin="0,5,0,5"
										 SelectionChanged="FontComboBox_SelectionChanged" DisplayMemberPath="Source"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="5,5,0,5">
                                <Label Content="Size:" />
                                <TextBox x:Name="txtFontSize" Text="24" Width="24"  Margin="4" TextChanged="txtFontSize_TextChanged"/>
                                <CheckBox x:Name="chkItalic" Content="Italic"  Margin="40,5,0,0" Checked="chkItalic_Checked" Unchecked="chkItalic_Unchecked" IsEnabled="False"/>
                                <CheckBox x:Name="chkBold" Content="Bold"  Margin="40,5,0,0" Unchecked="chkBold_Unchecked" Checked="chkBold_Checked"  IsEnabled="False"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="5,5,0,0">
                                <CheckBox x:Name="chkFileName" Content="Add filename to image" LostFocus="chkFileName_LostFocus"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Output File" Grid.Row="5" Margin="10,0,5,0"  Width="Auto">
                        <StackPanel Orientation="Vertical" Margin="5">
                            <StackPanel Orientation="Horizontal" Margin="5,5,0,0">
                                <Label Content="Select File Type:" Height="24" Width="105" VerticalAlignment="Top"/>
                                <ComboBox x:Name="cboOutputFileType" HorizontalAlignment="Left" Height="24" Width="60" VerticalAlignment="Top" SelectionChanged="cboOutputFileType_SelectionChanged"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="5,5,0,0">
                                <Label Content="Quality:" Height = "24" Width="105" VerticalAlignment="Top"/>
                                <TextBox Width="60" Name="txtQuality" Height = "24" VerticalAlignment="Top" 
										VerticalContentAlignment="Center" PreviewTextInput="txtQuality_PreviewTextInput" LostFocus="txtQuality_LostFocus"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="5,5,0,0">
                                <RadioButton x:Name="rbFastMode" Content="Fast (Recommended)" IsChecked="True" GroupName="Speed" Margin="0,0,10,0" Click="rbFastMode_Click"/>
                                <RadioButton x:Name="rbSlowMode" Content="Slow (Max Quality)" GroupName="Speed" Click="rbSlowMode_Click" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="5,5,0,0">
                                <CheckBox x:Name="chkSaveElsewhere" Content="Save Elsewhere" Click="chkSaveElsewhere_Click" />
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <local:FolderSelector x:Name="FolderSelector"  Grid.Column="1" Grid.Row="1" Grid.RowSpan="5" 
                                          VerticalAlignment="Top" Margin="5,0,10,0" Width="400" Height="530"/>
                    <StackPanel Orientation="Vertical" Grid.Row="6" Grid.ColumnSpan="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Button x:Name="btnOutputFolder" Grid.Column="0" Content="Output Folder" IsEnabled="True" 
									Margin="10, 0" Padding="5" HorizontalAlignment="Left" Width="100"
									Style="{StaticResource ButtonTextStyle}"
									ToolTip="Select folder for Output Files. Right-click dialog if new location required" Click="btnOutputFolder_Click" />
                            <Grid Grid.Column="1">
                                <TextBox Name="txtOutputFolder" Height="30" Margin="0,5,10,5" 
										 IsReadOnly="true"  TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center" TextChanged="txtOutputFolder_TextChanged" />
                                <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Center" 
										Width="20" Height="20" Margin="0,0,10,0" Click="ClearOutputFolder_Click" 
										Style="{StaticResource ClearButtonStyle}" />
                            </Grid>
                        </Grid>
                        <Grid Margin="10,5,10,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="420" />
                            </Grid.ColumnDefinitions>
                            <Label x:Name="folderLabel" Content="Processing..."  Grid.Column="0"  Height="30" VerticalAlignment="Top" FontWeight="Bold"/>
                            <ProgressBar x:Name="progressBar"  Grid.Column="1"  Minimum="0" Maximum="100" Value="0" Height="30" Width="Auto"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Error Log">
                <Grid Style="{StaticResource Gradient}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="122*"/>
                        <ColumnDefinition Width="35*"/>
                        <ColumnDefinition Width="457*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="5,5,5,5"  Background="#C6E6F5"  Grid.Row="0" Grid.ColumnSpan="3" >
                        <Label Content="Error Log file can be found here: " Height="30" VerticalAlignment="Top" HorizontalAlignment="Right"  Background="#C6E6F5" />
                        <TextBox x:Name="txtErrorLog" MinWidth="200" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" VerticalContentAlignment="Center" Grid.Row="0" Grid.Column="1"/>
                        <!--<Label Content="Error Log file: " Height="30" VerticalAlignment="Top" HorizontalAlignment="Right"  Background="#C6E6F5" />
                         <TextBox x:Name="txtErrorLog" MinWidth="200" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" VerticalContentAlignment="Center" Grid.Row="0" Grid.Column="1"/>
                       <Button x:Name="OpenErrorLog" Grid.Row="0" Grid.Column="3"  HorizontalAlignment="Right" Width="48" Margin="5,0"
								Style="{StaticResource ButtonTextStyle}"
								Content="Open" 
								IsEnabled="True" Click="OpenErrorLog_Click"/>-->
                    </StackPanel>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="200" MaxHeight="400" Grid.Row="1" Grid.ColumnSpan="3" >
                        <ListBox x:Name="lstErrorLog">
                            <ListBoxItem>No Errors Occurred</ListBoxItem>
                        </ListBox>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
        <!-- WebView2 on right -->
        <DockPanel DockPanel.Dock="Right" Margin="5">
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                <Button x:Name="btnSaveHTML" Content="Save as HTML" Click="SaveHtml_Click" Margin="0,0,10,0" Width="120" IsEnabled="False"  Style="{StaticResource ButtonTextStyle}"/>
                <Button x:Name="btnSaveCSV" Content="Save as CSV" Click="SaveCsv_Click" Margin="0,0,10,0" Width="120" IsEnabled="False" Style="{StaticResource ButtonTextStyle}"/>
                <Button x:Name="btnSaveBoth" Content="Save Both" Click="SaveBoth_Click"  Margin="0,0,10,0" Width="120" IsEnabled="False"  Style="{StaticResource ButtonTextStyle}"/>
                <Button x:Name="btnClipBoard" Content="Copy to Clipboard" Click="CopyToClipboard_Click" Width="120" IsEnabled="False" Margin="0,0,10,0" Style="{StaticResource ButtonTextStyle}"/>
            </StackPanel>
            <wv2:WebView2 x:Name="ResultsViewer" Margin="0,0,0,5"/>
        </DockPanel>
    </DockPanel>
</Window>